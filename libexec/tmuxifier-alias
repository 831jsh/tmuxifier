#! /usr/bin/env bash
set -e
[ -n "$TMUXIFIER_DEBUG" ] && set -x

# Provide tmuxifier help
if [ "$1" == "--help" ]; then
  echo "usage: tmuxifier alias <alias>

Resolve a command alias to it's full name."
  exit
fi

case "$1" in
  "session" | "ses" | "s" )
    echo "load-session"
    ;;
  "window" | "win" | "w" )
    echo "load-window"
    ;;
  "new-ses" | "ns" )
    echo "new-session"
    ;;
  "new-win" | "nw" )
    echo "new-window"
    ;;
  "edit-ses" | "es" )
    echo "edit-session"
    ;;
  "edit-win" | "ew" )
    echo "edit-window"
    ;;
  "ls" )
    echo "list"
    ;;
  "list-ses" | "lss" )
    echo "list-sessions"
    ;;
  "list-win" | "lsw" )
    echo "list-windows"
    ;;
  * )
    exit 1
esac
